{
  "name": "express-typescript-docker",
  "version": "1.0.0",
  "description": "A starter template for TypeScript and Node-js",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-ts && npm run copy-static-assets",
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "prettier-check": "./node_modules/prettier/bin-prettier.js --check  \"src/**/*{.ts,.json}\"",
    "prettier-fix": "./node_modules/prettier/bin-prettier.js --write  \"src/**/*{.ts,.json}\"",
    "copy-static-assets": "ts-node copyStaticAssets.ts"
  },
  "author": "so-mouga",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "http-errors": "^1.7.2",
    "lusca": "^1.6.1",
    "twig": "^1.13.2"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/express-jwt": "0.0.42",
    "@types/http-errors": "^1.6.1",
    "@types/lusca": "^1.5.0",
    "@types/node": "^11.13.6",
    "@types/prettier": "^1.16.3",
    "@types/shelljs": "^0.8.5",
    "@types/twig": "^1.12.2",
    "concurrently": "^4.1.0",
    "download": "^7.1.0",
    "https": "^1.0.0",
    "node-pre-gyp": "^0.12.0",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "shelljs": "^0.8.3",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.4"
  }
}
